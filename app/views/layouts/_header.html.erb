              <li>
                <%= link_to "ログアウト", logout_path, method: :delete , id: "down" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path, id: "down" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
