<header class="navbar navbar-fixed-top navbar-inverse" style = background-color:#FE9A2E>
  <div class="container">
    <%= link_to "Todo管理アプリケーション", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "ホーム", root_path, id:"menu" %></li>
        <% if logged_in? %>
          <li><%= link_to "ユーザー", users_path,id:"menu" %></li>
          <%= Time.zone.now %>
          <li class="dropdown" >
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
             アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu" style = background-color:#FE9A2E>
